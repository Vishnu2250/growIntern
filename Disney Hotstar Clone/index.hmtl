            <ul class="nav-links">
                <li class="nav-items"><a href="#">TV</a></li>
                <li class="nav-items"><a href="#">Movies</a></li>
                <li class="nav-items"><a href="#">Sports</a></li>
                <li class="nav-items"><a href="#">Premium</a></li>
                <li class="nav-items"><a href="#">Disney+</a></li>
                <li class="icon"><a href="#"></a></li>
            </ul>
        </div>
        <div class="right-container">
            <input type="text" class="search-box" placeholder="search">
            <button onclick="openModal('subscribe')" class="sub-btn">Subscribe</button>
            <button onclick="openModal('login')" class="sub-btn">Login</button>
            <button onclick="openModal('signup')" class="sub-btn">Sign Up</button>

            <div id="subscribeModal" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeModal('subscribe')">&times;</span>
                    <h2>Subscription</h2>
                    <form onsubmit="handleSubscribe(event)">
                        <div class="form-group">
                            <label for="PhoneNumber">Your Phone Number:</label>
                            <input type="number" id="PhoneNumber" name="username" required>
                            <label for="Modes Of Payment:">Modes Of Payment:</label>
                            <select name="" id="">
                                <option value="Gpay">Gpay</option>
                                <option value="PhonePe">PhonePe</option>
                                <option value="Paytm">Paytm</option>
                                <option value="Amazonpay">Amazon Pay</option>
                                <option value="NetBanking">NetBanking</option>
                            </select>
                            <label for="Subscription Pack:">Subscription Pack:</label>
                            <select name="" id="">
                                <option value="249/- per 28days">249/- per 28days</option>
                                <option value="799/- per 88days">799/- per 88days</option>
                                <option value="859/- per 90days">859/- per 90days</option>
                                <option value="1199/- per 180days">1199/- per 180days</option>
                                <option value="2499/- per 365days">2499/- per 365days</option>
                            </select>
                        </div>
                        <button type="submit">Payment</button>
                    </form>
                    <div id="SubscribeMessage"></div>
                </div>
            </div>

            <div id="loginModal" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeModal('login')">&times;</span>
                    <h2>Login</h2>
                    <form onsubmit="handleLogin(event)">
                        <div class="form-group">
                            <label for="loginUsername">Username</label>
                            <input type="text" id="loginUsername" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="loginPassword">Password</label>
                            <div class="password-container">
                                <input type="password" id="loginPassword" name="password" required>
                                <span onclick="togglePassword('loginPassword')" class="toggle-password">&#128065;</span>
                            </div>
                        </div>
                        <button type="submit">Login</button>
                    </form>
                    <div id="loginMessage"></div>
                </div>
            </div>
        
            <div id="signupModal" class="modal">
                <div class="modal-content">
                    <span class="close" onclick="closeModal('signup')">&times;</span>
                    <h2>Sign Up</h2>
                    <form onsubmit="handleSignup(event)">
                        <div class="form-group">
                            <label for="signupUsername">Username</label>
                            <input type="text" id="signupUsername" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="signupPassword">Password</label>
                            <div class="password-container">
                                <input type="password" id="signupPassword" name="password" required>
                                <span onclick="togglePassword('signupPassword')" class="toggle-password">&#128065;</span>
                            </div>
                        </div>
                        <button type="submit">Sign Up</button>
                    </form>
                    <div id="signupMessage"></div>
                </div>
            </div>
        </div>
    </nav>

